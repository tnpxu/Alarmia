<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settimer_bg_test">

    <!--Mode button-->
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="-70dp"
        android:layout_height="60dp">
        <!-- Content -->
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--mode label-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/panel_button_mode_close">
            <Button
                android:layout_height="60dp"
                android:layout_width="10dp"
                android:background="#ffab16"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <!-- Navigation drawer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:weightSum="1.0">
            <Button
                android:id="@+id/button_sleepfor"
                android:layout_height="60dp"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:text="SleepFor"
                android:background="@drawable/sleepforcolor"
                android:scaleType="fitXY"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_sleepuntil"
                android:layout_height="60dp"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:text="SleepUntil"
                android:background="@drawable/sleepuntilcolor"
                android:scaleType="fitXY"
                android:textSize="20sp" />

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>






        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:id="@+id/linearLayout">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2FFFFFFF" />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/num1"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2FFFFFFF" />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/num2"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2FFFFFFF" />


        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#03FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"/>

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/white"
        android:background="@drawable/done_button"
        android:layout_above="@+id/linearLayout"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hr_time"
        android:layout_above="@id/done"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="70dp"
        android:padding="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="80dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:id="@+id/hr_text"
        android:layout_above="@id/done"
        android:text="HR"
        android:textColor="#ff747b"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:layout_marginBottom="115dp"
        android:layout_marginLeft="160dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:id="@+id/mn_time"
        android:layout_above="@id/done"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="95dp"
        android:layout_marginLeft="210dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_above="@id/done"
        android:text="MN"
        android:textColor="#ff747b"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:layout_marginBottom="115dp"
        android:layout_marginLeft="300dp"

        />






</RelativeLayout>