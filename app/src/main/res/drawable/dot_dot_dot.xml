<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><!-- pressed -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/dotcolorpressed"/>
            <corners android:radius="60dp" />
            <size android:height="10dp" android:width="10dp"/>
            <gradient android:centerColor="@color/dotcolorpressed"
                android:endColor="@color/dotcolorpressed"
                android:startColor="@color/dotcolorpressed"/>
        </shape>
    </item>
    <item> <!-- default -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/dotcolor"/>
            <corners android:radius="60dp" />
            <size android:height="10dp" android:width="10dp"/>
            <gradient android:centerColor="@color/dotcolor"
                android:endColor="@color/dotcolor"
                android:startColor="@color/dotcolor"/>
        </shape>
    </item>
</selector>