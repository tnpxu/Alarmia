<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><!-- pressed -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="60dp" />
            <size android:height="90dp" android:width="90dp"/>
            <gradient android:centerColor="@color/savecolorpressed"
                android:endColor="@color/savecolorpressed"
                android:startColor="@color/savecolorpressed"/>
        </shape>
    </item>
    <item> <!-- default -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="60dp" />
            <size android:height="90dp" android:width="90dp"/>
            <gradient android:centerColor="@color/savecolor"
                android:endColor="@color/savecolor"
                android:startColor="@color/savecolor"/>
        </shape>
    </item>
</selector>