<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><!-- pressed -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/addcolorpressed"/>
            <corners android:radius="60dp" />
            <size android:height="65dp" android:width="65dp"/>
            <gradient android:centerColor="@color/addcolorpressed"
                android:endColor="@color/addcolorpressed"
                android:startColor="@color/addcolorpressed"/>
        </shape>
    </item>
    <item> <!-- default -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/addcolor"/>
            <corners android:radius="60dp" />
            <size android:height="65dp" android:width="65dp"/>
            <gradient android:centerColor="@color/addcolor"
                android:endColor="@color/addcolor"
                android:startColor="@color/addcolor"/>
        </shape>
    </item>
</selector>